$stdout.sync = true
$stderr.sync = true
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'java_buildpack/buildpack'
require 'fileutils'
require 'open-uri'

system("echo " + Dir.pwd)

diraux = Dir.pwd

FileUtils::mkdir_p 'itklib'

for a in Dir.entries(Dir.pwd)
	system("echo " + a)
end

FileUtils::cd 'itklib'

open('libSimpleITKJava.so', 'wb') do |file|
  file << open('https://dl.dropboxusercontent.com/u/236437/libSimpleITKJava.so').read
end
system("export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:"+Dir.pwd+"/itklib")

for a in Dir.entries(Dir.pwd)
	system("echo " + a)
end

FileUtils::cd diraux

system("echo $LD_LIBRARY_PATH")

build_dir = ARGV[0]

JavaBuildpack::Buildpack.with_buildpack(build_dir, 'Compile failed with exception %s') do |buildpack|
  buildpack.compile
end

